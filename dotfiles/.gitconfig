[alias]
	st = status
	co = checkout
	br = branch
	cm = commit
	ca = commit -a
	cam = commit -am
	pl = pull
	ps = push
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	unstage = reset HEAD --
	last = log -1 HEAD
	visual = !gitk
	
