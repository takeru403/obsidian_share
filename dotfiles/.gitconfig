[http]
	postBuffer = 1048576000

[push]
	default = simple
	autoSetupRemote = true

[pull]
	rebase = false

[branch]
	autosetupmerge = always
	autosetuprebase = always

[merge]
	tool = vimdiff

[diff]
	tool = vimdiff

# ===============================
# Git LFSè¨­å®š
